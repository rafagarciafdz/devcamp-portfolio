<div class="comment-card">
	<div class="card">
		<div class="card-block">
			<div class="row">
				<div class="col-md-2">
				  <%= gravatar_helper comment.user %>
				</div>
				<div class="col-md-10">
				  <div class="comment-attribution">
					  <b><%= comment.user.first_name %></b> <span class"comment-time"><%= distance_of_time_in_words(comment.created_at, Time.now) %> ago</span>
					</div>
				  <div>
					  <%= comment.content %>
					</div>					
				</div>
			</div>
		</div>
	</div>
</div>
