<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
    	<%= image_tag portfolio_img(@portfolio_item.main_image.to_s, 'main'), width: '100%' %>
    	<br><br>
    	<h2>Technologies</h2>
    	<% @portfolio_item.technologies.each do |t| %>
			  <p><%= t.name %></p>
			<% end %>
    </div>
    <div class="col-md-5">
    	<h1><%= @portfolio_item.title %></h1>
    	<em><%= @portfolio_item.subtitle %></em>
			<p><%= @portfolio_item.body %></p>

			<%= link_to "Back to portfolio items", portfolios_path %>
    </div>
  </div>
</div>




