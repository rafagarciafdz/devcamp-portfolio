<aside class="col-md-4 blog-sidebar">
  <div class="p-4 mb-3 bg-light rounded">
    <h4 class="font-italic"><%= link_to "Topics", topics_path %></h4>
    <span class="mb-0">
      <% @side_bar_topics.each do |topic| %>
        <p><%= link_to topic.title, topic_path(topic) %></p>
      <% end %>
    </span>
  </div>

  <div class="sidebar-module">
    <h4 class="font-italic">Archives</h4>
    <%= source_helper("alert alert-primary") %>
  </div>

  <div class="p-4">
    <h4 class="font-italic">Elsewhere</h4>
    <ol class="list-unstyled social-links">
      <li><%= link_to 'Write New Blog', new_blog_path if logged_in?(:site_admin) %></li>
      <li><%= link_to fa_icon "github" %></li>
      <li><%= link_to fa_icon "twitter" %></li>
      <li><%= link_to fa_icon "facebook" %></li>
      <li><%= link_to fa_icon "instagram" %></li>
      <li><%= link_to fa_icon "twitch" %></li>
    </ol>
  </div>
</aside><!-- /.blog-sidebar -->